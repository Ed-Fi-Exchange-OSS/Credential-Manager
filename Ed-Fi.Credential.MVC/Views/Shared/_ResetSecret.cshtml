@model Ed_Fi.Credential.MVC.Models.ChangeSecretModel
@{
    ViewBag.Title = "Details";
}
@Scripts.Render("~/bundles/jqueryval")
  
<div class="modal-content">
<div class="modal-header">
    <h5 class="modal-title" id="formTitle">
        Reset Secret
    </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body" id="formBody">
@using (Html.BeginForm("ResetSecret", "Profile", FormMethod.Post, new { id = "resetSecretForm", onsubmit="$('#submitButton').click(); return false;" }))
{
    @Html.HiddenFor(model => model.ApiClientId)
    <table class="table table-bordered">
        <tr>
            <td>
                @Html.LabelFor(model => model.Key)
            </td>
            <td>
                @(Html.TextBoxFor(m => m.Key,new{disabled= "disabled" }))
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Secret)
            </td>
            <td>
                @(Html.TextBoxFor(m => m.Secret))
                @Html.ValidationMessageFor(m=>m.Secret) 
            </td>
        </tr>
    </table>
}
</div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary" onclick="secretFormSubmit(@Model.ApiClientId)" data-dismiss="modal" id="submitButton">Save changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
</div>

<style>
    .k-edit-form-container {
        width: 100%;
    }

    .field-validation-error {

        color: red;

        display: block;
        
    }
</style>